{
    "env": {
        "commonjs": true,
        "node": true,
        "mocha": true
    },
    "extends": "strongloop",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "max-len": ["error", 140]
    }
}