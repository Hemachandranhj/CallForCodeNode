{
  "name": "assistanceservice",
  "version": "1.0.0",
  "description": "service to connect volunteers with elderly and vulnerable people",
  "private": true,
  "engines": {
    "node": "^12.0.0"
  },
  "scripts": {
    "dev": "nodemon server/server.js",
    "start": "node server/server.js",
    "check-coverage": "nyc report --check-coverage --lines 100",
    "lint": "eslint --ignore-path .gitignore .",
    "fix": "eslint --ignore-path .gitignore . --fix",
    "test": "nyc mocha test --recursive --exit"
  },
  "husky": {
    "hooks": {
      "pre-commit": ""
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "exclude": [
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "dependencies": {
    "bluemix-appid": "^3.0.0",
    "body-parser": "^1.18.3",
    "cfenv": "^1.0.3",
    "cors": "^2.8.4",
    "express": "^4.16.4",
    "express-enforces-ssl": "^1.1.0",
    "express-session": "^1.15.1",
    "ibm-watson": "^5.4.0",
    "mongoose": "^5.9.9",
    "nconf": "^0.10.0",
    "passport": "^0.3.2",
    "swagger-ui-express": "^4.1.3",
    "twilio": "^3.42.1",
    "vcap_services": "^0.7.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-strongloop": "^2.1.0",
    "husky": "^4.2.3",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "supertest": "^4.0.2"
  }
}
